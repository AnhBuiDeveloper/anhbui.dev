---
const { title = "Anh Bui", description = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; margin: 0; background: #fafafa; color:#111827; }
      .wrap { max-width: 980px; margin: 0 auto; padding: 28px 20px 80px; }
      header { display:flex; justify-content:space-between; align-items:center; gap:16px; padding: 10px 0 22px; }
      .brand a { text-decoration:none; color:#111827; font-weight:700; }
      nav { display:flex; gap:10px; flex-wrap:wrap; }
      nav a { text-decoration:none; padding: 8px 12px; border:1px solid #e5e7eb; border-radius:999px; color:#111827; background:#fff; }
      nav a:hover { background:#f3f4f6; }
      main { background:#fff; border:1px solid #e5e7eb; border-radius:16px; padding: 28px; }
      h1 { margin: 0 0 10px; font-size: 34px; }
      p { color:#374151; line-height:1.6; }
      footer { margin-top: 18px; color:#6b7280; font-size: 13px; }
      code { background:#f3f4f6; padding: 2px 6px; border-radius: 6px; }
    </style>
  </head>
  <body>
    <div class="wrap">
      <header>
        <div class="brand"><a href="/">AnhBui.dev</a></div>
        <nav>
          <a href="/about">About</a>
          <a href="/blog">Blog</a>
          <a href="/kb">Knowledge Base</a>
          <a href="/cv">CV</a>
          <a href="/contact">Contact</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        Built with Astro â€¢ Hosted on Azure Static Web Apps
      </footer>
    </div>
  </body>
</html>
